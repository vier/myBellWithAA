<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13.33dp"
    android:layout_marginTop="13.33dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/custom_dialog_fragment_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="gone" >

            <com.campmobile.launcher.font.FontTextView
                android:id="@+id/custom_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="16sp" />

            <com.campmobile.launcher.font.FontTextView
                android:id="@+id/custom_dialog_title_widget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:clickable="true"
                android:drawablePadding="3.33dp"
                android:gravity="center_vertical|right"
                android:textColor="#666666"
                android:textSize="14.67dp"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:id="@+id/custom_dialog_fragment_title_divider"
            android:layout_width="293.33dp"
            android:layout_height="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#3abd00"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/custom_dialog_fragment_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_dialog_fragment_title_layout"
            android:layout_marginTop="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_dialog_fragment_button_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/custom_dialog_fragment_negative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/custom_dialog_cancel_button_text"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/custom_dialog_fragment_neutral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/custom_dialog_fragment_positive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/custom_dialog_ok_button_text"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>